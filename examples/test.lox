// Recursion
fun fib(n) {
  if (n <= 1) return n;
  return fib(n - 2) + fib(n - 1);
}

for (var i = 0; i < 10; i = i + 1) {
  print "Fib " + i + ": " + fib(i);
}

// Closures
fun makeCounter() {
  var i = 0;
  fun count() {
    i = i + 1;
    print "Counter: " + i;
  }
  return count;
}
var counter = makeCounter();
counter();
counter();

